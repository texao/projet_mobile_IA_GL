<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:scrollbars="vertical">

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/fleche_retour"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:contentDescription="Retour"
        android:padding="10dp"/>

    <!-- Titre de la vue -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Progrès de l'Élève"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="20dp"/>

    <!-- Progrès en Mathématiques -->
    <TextView
        android:id="@+id/tvMathsProgress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mathématiques"
        android:paddingBottom="8dp"/>

    <ImageView
        android:id="@+id/imgMathsProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/star_empty" /> <!-- Icône d'étoile vide (à remplacer dynamiquement) -->

    <!-- Progrès en Programmation -->
    <TextView
        android:id="@+id/tvProgrammingProgress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Programmation"
        android:paddingBottom="8dp"/>

    <ImageView
        android:id="@+id/imgProgrammingProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/star_empty" />

    <!-- Progrès en Histoire -->
    <TextView
        android:id="@+id/tvHistoryProgress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Histoire"
        android:paddingBottom="8dp"/>

    <ImageView
        android:id="@+id/imgHistoryProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/star_empty" />

    <!-- Liste des notes (si nécessaire) -->
    <ListView
        android:id="@+id/listViewGrades"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
